<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="using:TodoListApp.Models"
        x:Class="TodoListApp.MainWindow"
        Title="To-Do List"
        Width="420" Height="700">

    <StackPanel Margin="20">
        <TextBlock Text="My To-Do List" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBox x:Name="TaskInput" Width="250" Watermark="Enter a task..."/>
            <Button x:Name="AddButton" Content="Add" Margin="10,0,0,0" Width="80"/>
        </StackPanel>

        <TextBox x:Name="TagsInput" Width="340" Watermark="Tags (comma-separated, e.g., work, urgent)" Margin="0,0,0,5"/>

        <!-- Date Picker -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Due date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="DueDatePicker" Width="250"/>
        </StackPanel>

        <!-- Filtres temporels -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Quick filters:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="TodayFilterButton" Content="Today" Width="60" Margin="0,0,5,0"/>
            <Button x:Name="WeekFilterButton" Content="This Week" Width="80" Margin="0,0,5,0"/>
            <Button x:Name="OverdueFilterButton" Content="Overdue" Width="70" Margin="0,0,5,0"/>
        </StackPanel>

        <!-- Filtre de tags -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Filter by tag:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="TagFilterInput" Width="120" Watermark="Enter tag..."/>
            <Button x:Name="FilterButton" Content="Filter" Margin="10,0,5,0" Width="60"/>
            <Button x:Name="ClearFilterButton" Content="Clear All" Width="70"/>
        </StackPanel>

        <ListBox x:Name="TaskList" Height="250" DoubleTapped="OnTaskListDoubleTapped">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="models:TaskItem">
                    <StackPanel Margin="0,5,0,5">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsCompleted}" Margin="0,0,10,0"/>
                            <TextBlock x:Name="TitleTextBlock" 
                                       Text="{Binding Title}" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Bold"
                                       Tag="{Binding}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Tags}" 
                                   Foreground="Gray" 
                                   FontSize="11"
                                   Margin="25,2,0,0"
                                   IsVisible="{Binding Tags, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                        <StackPanel Orientation="Horizontal" Margin="25,2,0,0">
                            <TextBlock Text="ðŸ“… Due: " 
                                       Foreground="DarkBlue" 
                                       FontSize="11"
                                       IsVisible="{Binding DueDate, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                            <TextBlock Text="{Binding DueDate, StringFormat='dd/MM/yyyy'}" 
                                       FontSize="11"
                                       IsVisible="{Binding DueDate, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                            <TextBlock Text=" âš ï¸ OVERDUE" 
                                       Foreground="Red" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="10,0,0,0"
                                       IsVisible="{Binding IsOverdue}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Actions globales -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button x:Name="CompleteAllButton" Content="âœ“ Complete All" Width="120" Margin="0,0,5,0"/>
            <Button x:Name="ClearCompletedButton" Content="ðŸ—‘ Clear Completed" Width="140"/>
        </StackPanel>

        <Button x:Name="DeleteButton" Content="Delete selected" Margin="0,10,0,0"/>
        <Button x:Name="SaveButton" Content="Save to JSON" Margin="0,10,0,0"/>
        <TextBlock x:Name="StatusText" Text="" Foreground="Green" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
