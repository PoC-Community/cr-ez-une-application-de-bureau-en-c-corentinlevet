<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Styles des Boutons -->
    <Style Selector="Button">
        <Setter Property="Background" Value="#4A90E2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#357ABD"/>
    </Style>
    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#2C5F9E"/>
    </Style>
    
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="#E8EEF5"/>
        <Setter Property="Foreground" Value="#4A90E2"/>
    </Style>
    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#D1DCE8"/>
    </Style>
    
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="#E74C3C"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="Button.danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#C0392B"/>
    </Style>
    
    <Style Selector="Button.success">
        <Setter Property="Background" Value="#27AE60"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="Button.success:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#229954"/>
    </Style>
    
    <!-- Styles des TextBox -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
        <Setter Property="BorderBrush" Value="#D1DCE8"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CaretBrush" Value="#4A90E2"/>
    </Style>
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="#4A90E2"/>
    </Style>
    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="#A0C8E8"/>
    </Style>
    <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="#95A5A6"/>
    </Style>
    
    <!-- Styles des CheckBox -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="#2C3E50"/>
    </Style>
    <Style Selector="CheckBox /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#4A90E2"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="#4A90E2"/>
        <Setter Property="BorderBrush" Value="#4A90E2"/>
    </Style>
    <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
        <Setter Property="BorderBrush" Value="#357ABD"/>
    </Style>
    <Style Selector="CheckBox /template/ Path#NormalRectangleCheck">
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
    </Style>
    
</Styles>
